<h1>Event Name:<%= @event.name %></h1>

<ul>
<% @attendees.each do |attendee| %>
  <li>
    <%= attendee.name %>
    <%= link_to "show" ,event_attendee_path(@event , attendee) , :class => "btn btn-default"%>
    <%= link_to "edit" ,edit_event_attendee_path(@event , attendee) , :class => "btn btn-info"%>
    <%= link_to "destroy" , event_attendee_path(@event , attendee) , :method => :delete , :class => "btn btn-danger"%>
  </li>
<% end %>
</ul>

<%= link_to "NEW", new_event_attendee_path(@event), :class => "btn btn-default" %>