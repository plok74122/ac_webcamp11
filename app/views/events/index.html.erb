<h1>Event List</h1>
<table class="table table-striped">
  <tr>
    <th>名稱</th>
    <th>show</th>
    <th>edit</th>
    <th>destroy</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= link_to "show" , :controller => "events" , :action => "show" ,:id => event %></td>
      <td><%= link_to "edit" , :controller => "events" , :action => "edit" ,:id => event %></td>
      <td><%= link_to "destroy" , :controller => "events" , :action => "destroy" ,:id => event %></td>
    </tr>
  <% end %>
</table>
<%= paginate @events %>
<%= link_to "new event" ,:controller => "events" , :action => "new" %>